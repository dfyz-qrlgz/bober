        <Button Name="btn2" Content="первая таблица" HorizontalAlignment="Left" Margin="612,326,0,0" VerticalAlignment="Top" Height="65" Width="152" Click="btn2_Click"/>
        <TextBox x:Name="Bookid" HorizontalAlignment="Left" Height="33" Margin="41,326,0,0" TextWrapping="Wrap" Text="id книги" VerticalAlignment="Top" Width="53"/>
        <TextBox x:Name="BkName" HorizontalAlignment="Left" Height="33" Margin="99,326,0,0" TextWrapping="Wrap" Text="Название книги" VerticalAlignment="Top" Width="116"/>
        <TextBox x:Name="BAthid" HorizontalAlignment="Left" Height="33" Margin="220,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="54" Text="ID автора книги" RenderTransformOrigin="0,0.501"/>
        <Button x:Name="btn4" Content="Button" HorizontalAlignment="Left" Height="27" Margin="41,364,0,0" VerticalAlignment="Top" Width="359" Click="btn4_Click"/>
        <DatePicker x:Name="PubDate" HorizontalAlignment="Left" Margin="279,327,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
    </Grid>
</Window>